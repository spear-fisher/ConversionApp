    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="0"
        android:textSize="14sp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/westernYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="1988"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/ageTextView"
        app:layout_constraintStart_toEndOf="@+id/ageTextView"
        app:layout_constraintEnd_toStartOf="@+id/japaneseEraTextView"/>

    <TextView
        android:id="@+id/japaneseEraTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="年号"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/ageTextView"
        app:layout_constraintStart_toEndOf="@+id/westernYearTextView"
        app:layout_constraintEnd_toStartOf="@+id/japaneseYearTextView"/>

    <TextView
        android:id="@+id/japaneseYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="63"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/ageTextView"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>